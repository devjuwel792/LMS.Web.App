@{
 
    Layout = "~/Views/Shared/Backend/_Layout.cshtml";
    ViewData["Title"] = "Access Denied";
    var returnUrl = ViewData["ReturnUrl"] as string;
}

<h1>Access Denied</h1>
<p>Unfortunately, you do not have permission to access this page.</p>

@if (!string.IsNullOrEmpty(returnUrl))
{
    <p>You tried to access: <a href="@returnUrl">@returnUrl</a></p>
    <p>You can <a href="/">return to the home page</a> or <a href="@Url.Action("Login", "Account", new { ReturnUrl = returnUrl })">login with a different account</a>.</p>
}
else
{
    <p><a href="/">Return to the home page</a>.</p>
}