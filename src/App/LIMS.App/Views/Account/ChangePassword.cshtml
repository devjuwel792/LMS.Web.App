@model LMS.Application.ViewModel.IdentityModelViewModel.ChangePasswordVm



<form asp-action="ChangePassword" class="mb-3">
    <div class="mb-3">
        <label asp-for="CurrentPassword" class="form-label"></label>
        <input class="form-control" asp-for="CurrentPassword" placeholder="Enter your Current Password" />
    </div>
    <div class="mb-3">
        <label asp-for="NewPassword" class="form-label"></label>
        <input class="form-control" asp-for="NewPassword" placeholder="Enter your email" />
    </div>
    <div class="mb-3">
        <label asp-for="ConfirmPassword" class="form-label"></label>
        <input class="form-control" asp-for="ConfirmPassword" placeholder="Enter your email" />
    </div>
    <input type="submit" value="Change Password" class="btn btn-primary d-grid w-100"/>
</form>
